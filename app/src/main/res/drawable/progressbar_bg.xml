<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#11FFFFFF"
                android:centerY="0.75"
                android:endColor="#11FFFFFF"
                android:startColor="#11FFFFFF" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="45"
                    android:centerY="0.75"
                    android:endColor="#f61a53"
                    android:startColor="#d7315c" />
            </shape>
        </clip>
    </item>

</layer-list>
