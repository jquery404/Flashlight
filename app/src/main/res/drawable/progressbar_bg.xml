<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#805a5d5a"
                android:centerY="0.75"
                android:endColor="#80747674"
                android:startColor="#809d9e9d"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="#3322daf3"
                    android:centerY="0.75"
                    android:endColor="#3322daf3"
                    android:startColor="#3322daf3"/>
            </shape>
        </clip>
    </item>

</layer-list>
