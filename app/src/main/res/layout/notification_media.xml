<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/notification_album_art"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song Title"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/notification_song_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Artist Name"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp">
        
        <!-- Progress bar track -->
        <ProgressBar
            android:id="@+id/notification_seekbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="center_vertical"
            android:max="1000"
            android:progress="0"
            android:progressDrawable="@android:drawable/progress_horizontal"
            android:minHeight="4dp"
            android:maxHeight="4dp" />
        
        <!-- Visible thumb indicator -->
        <ImageView
            android:id="@+id/notification_seekbar_thumb"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical|start"
            android:src="@drawable/seekbar_thumb"
            android:contentDescription="Seek position" />
        
        <!-- Clickable segments for interactive seeking (10 segments = 10% each) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <FrameLayout
                android:id="@+id/seek_segment_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true" />
            
            <FrameLayout
                android:id="@+id/seek_segment_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true" />
            
            <FrameLayout
                android:id="@+id/seek_segment_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true" />
            
            <FrameLayout
                android:id="@+id/seek_segment_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true" />
            
            <FrameLayout
                android:id="@+id/seek_segment_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true" />
            
            <FrameLayout
                android:id="@+id/seek_segment_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true" />
            
            <FrameLayout
                android:id="@+id/seek_segment_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true" />
            
            <FrameLayout
                android:id="@+id/seek_segment_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true" />
            
            <FrameLayout
                android:id="@+id/seek_segment_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true" />
            
            <FrameLayout
                android:id="@+id/seek_segment_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <ImageButton
            android:id="@+id/notification_seek_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_media_rew"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Seek Back 10s"
            android:padding="4dp" />

        <TextView
            android:id="@+id/notification_time_current"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0:00"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/notification_seek_forward"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_media_ff"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Seek Forward 10s"
            android:padding="4dp" />

        <TextView
            android:id="@+id/notification_time_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp">

        <ImageButton
            android:id="@+id/notification_prev"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_play_prev_ds"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Previous" />

        <ImageButton
            android:id="@+id/notification_play_pause"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_play"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Play/Pause" />

        <ImageButton
            android:id="@+id/notification_next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_play_next_ds"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Next" />
    </LinearLayout>

</LinearLayout>
